@model IEnumerable<FastFood.Models.SanPham>

@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Format giá tiền & tồn kho */
    .price-tag {
        font-weight: 700;
        color: #d35400;
    }

    .stock-tag {
        font-weight: 700;
        color: #2980b9;
    }

    /* Custom Header */
    .card-header-custom {
        background: linear-gradient(45deg, #ffbe33, #e69c00);
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 15px 25px;
    }

    /* Ảnh thumbnail sản phẩm */
    .thumb-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.2s;
    }

        .thumb-img:hover {
            transform: scale(1.1);
        }

    /* Nút hành động tròn */
    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        transition: all 0.3s;
    }

    .btn-edit {
        background: #e3f2fd;
        color: #0d47a1;
    }

        .btn-edit:hover {
            background: #0d47a1;
            color: white;
        }

    .btn-delete {
        background: #ffebee;
        color: #c62828;
    }

        .btn-delete:hover {
            background: #c62828;
            color: white;
        }
</style>

<div class="card shadow border-0 mb-4" style="border-radius: 15px;">
    <div class="card-header-custom d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold"><i class="fas fa-hamburger me-2"></i> DANH SÁCH MÓN ĂN</h5>
        <a href="@Url.Action("Form", "Product")" class="btn btn-light text-warning fw-bold rounded-pill px-3 shadow-sm">
            <i class="fas fa-plus me-1"></i> Thêm Món
        </a>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0 table-hover">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Hình ảnh</th>
                        <th>Tên Món</th>
                        <th>Danh Mục</th>
                        <th>Giá Bán</th>
                        <th class="text-center">Tồn Kho</th>
                        <th class="text-center">Trạng Thái</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "/Images/default-food.png" : item.HinhAnh)"
                                         class="thumb-img" onerror="this.src='https://via.placeholder.com/60?text=Food'" />
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.TenSanPham</div>
                                    <small class="text-muted text-truncate d-inline-block" style="max-width: 150px;">
                                        @item.MoTa
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark p-2 rounded-pill">
                                        @(item.LoaiSanPham != null ? item.LoaiSanPham.TenLoaiSP : "Chưa phân loại")
                                    </span>
                                </td>
                                <td class="price-tag">
                                    @String.Format("{0:N0} đ", item.GiaTien)
                                </td>
                                <td class="text-center stock-tag">
                                    @item.SoLuongTon
                                </td>
                                <td class="text-center">
                                    @if (item.TrangThai == true)
                                    {
                                        <span class="badge bg-success px-2 py-1 rounded-pill">Đang bán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-2 py-1 rounded-pill">Ngừng bán</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("Form", "Product", new { id = item.MaSanPham })" class="btn-action btn-edit me-1" title="Sửa">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <button onclick="confirmDelete(@item.MaSanPham)" class="btn-action btn-delete" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="7" class="text-center py-5 text-muted">Chưa có món ăn nào!</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Xóa món ăn này?',
            text: "Dữ liệu sẽ không thể khôi phục sau khi xóa!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d63031',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Xóa ngay',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                // Điều hướng tới Action xóa
                window.location.href = '/Product/Delete/' + id;
            }
        })
    }
</script>