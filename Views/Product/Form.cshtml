@model FastFood.Models.SanPham

@{
    bool isEdit = Model != null && Model.MaSanPham > 0;
    ViewBag.Title = isEdit ? "Cập Nhật Sản Phẩm" : "Thêm Sản Phẩm Mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string actionName = isEdit ? "Edit" : "Create";
    string imageSrc = (!string.IsNullOrEmpty(Model.HinhAnh)) ? Model.HinhAnh : "";
}

<style>
    /* CSS Tùy chỉnh tương thích BS5 */
    .card-header-custom {
        background: linear-gradient(45deg, #ffbe33, #e69c00);
        color: white;
        border-radius: 15px 15px 0 0;
        padding: 15px 25px;
    }

    .form-control, .form-select {
        border-radius: 8px;
        height: 45px;
        border: 1px solid #ced4da; /* Màu viền chuẩn BS5 */
    }

    .form-control:focus, .form-select:focus {
        border-color: #ffbe33;
        box-shadow: 0 0 0 0.25rem rgba(255, 190, 51, 0.25);
    }

    textarea.form-control { height: auto !important; }

    /* Vùng Upload ảnh */
    .image-upload-area {
        border: 2px dashed #ced4da;
        border-radius: 10px;
        height: 300px;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: 0.3s;
    }

    .image-upload-area:hover {
        border-color: #ffbe33;
        background: #fffbf0;
    }

    .image-preview {
        width: 100%;
        height: 100%;
        object-fit: contain;
        position: absolute;
        top: 0;
        left: 0;
        background: #fff;
        padding: 5px;
        display: @(string.IsNullOrEmpty(imageSrc) ? "none" : "block");
    }

    .upload-placeholder {
        display: @(string.IsNullOrEmpty(imageSrc) ? "block" : "none");
        text-align: center;
        color: #6c757d;
    }

    .btn-submit {
        background: #ffbe33;
        color: white;
        font-weight: 600;
        border: none;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }

    .btn-submit:hover {
        background: #e69c00;
        color: white;
        transform: translateY(-2px);
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow border-0 mb-4" style="border-radius: 15px;">
            <div class="card-header-custom">
                <h5 class="mb-0 fw-bold">
                    <i class="fas @(isEdit ? "fa-edit" : "fa-plus-circle") me-2"></i> @ViewBag.Title.ToUpper()
                </h5>
            </div>

            <div class="card-body p-4">
                @using (Html.BeginForm(actionName, "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    if (isEdit)
                    {
                        @Html.HiddenFor(model => model.MaSanPham)
                        @Html.HiddenFor(model => model.HinhAnh)
                        @Html.HiddenFor(model => model.NgayTao)
                    }

                    <div class="row g-4">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tên Món Ăn <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Nhập tên món ăn..." } })
                            </div>

                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Danh Mục</label>
                                    @Html.DropDownList("MaLoaiSP", null, "-- Chọn danh mục --", new { @class = "form-select" })
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Giá Bán (VNĐ) <span class="text-danger">*</span></label>
                                    @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @placeholder = "0" } })
                                </div>
                            </div>

                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Số Lượng Tồn Kho</label>
                                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @placeholder = "0" } })
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold d-block">Trạng Thái</label>
                                    <div class="form-check form-switch mt-2">
                                        @Html.CheckBox("TrangThai", Model.TrangThai.GetValueOrDefault(true), new { @class = "form-check-input", @id = "switchStatus", @style = "cursor: pointer;" })
                                        <label class="form-check-label" for="switchStatus" id="statusLabel" style="cursor: pointer;">
                                            @(Model.TrangThai == true ? "Đang bán" : "Ngừng bán")
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Mô Tả Chi Tiết</label>
                                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", @rows = "5", @placeholder = "Mô tả thành phần, hương vị..." })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-bold">Hình Ảnh Sản Phẩm</label>
                            <input type="file" name="uploadHinh" id="fileInput" accept="image/*" style="display:none;" />

                            <div class="image-upload-area" onclick="document.getElementById('fileInput').click()">
                                <div class="upload-placeholder" id="placeholderIcon">
                                    <i class="fas fa-camera fa-3x mb-3" style="color: #ffbe33;"></i>
                                    <p class="mb-0 fw-bold text-dark">Chọn ảnh món ăn</p>
                                    <small class="text-muted">.JPG, .PNG (Max 2MB)</small>
                                </div>
                                <img id="previewImg" class="image-preview rounded" src="@imageSrc" onerror="this.style.display='none'; document.getElementById('placeholderIcon').style.display='block';" />
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="text-end">
                        <a href="@Url.Action("Index")" class="btn btn-light rounded-pill px-4 me-2 border fw-bold text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-submit rounded-pill px-5">
                            <i class="fas fa-save me-1"></i> @(isEdit ? "LƯU THAY ĐỔI" : "TẠO MỚI")
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Preview ảnh (Giữ nguyên logic JS)
    document.getElementById('fileInput').onchange = function (evt) {
        var tgt = evt.target || window.event.srcElement, files = tgt.files;
        if (FileReader && files && files.length) {
            var fr = new FileReader();
            fr.onload = function () {
                var img = document.getElementById('previewImg');
                img.src = fr.result;
                img.style.display = 'block';
                document.getElementById('placeholderIcon').style.display = 'none';
            }
            fr.readAsDataURL(files[0]);
        }
    }

    // Đổi label trạng thái
    document.getElementById('switchStatus').onchange = function () {
        document.getElementById('statusLabel').innerText = this.checked ? "Đang bán" : "Ngừng bán";

        // Thêm chút màu sắc cho sinh động (Option)
        if (this.checked) {
            document.getElementById('statusLabel').classList.remove('text-muted');
            document.getElementById('statusLabel').classList.add('text-success', 'fw-bold');
        } else {
            document.getElementById('statusLabel').classList.remove('text-success', 'fw-bold');
            document.getElementById('statusLabel').classList.add('text-muted');
        }
    }
</script>