@model IEnumerable<FastFood.Models.ChiTietHoaDon>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 35%;">Sản phẩm</th>
                <th class="text-center" style="width: 15%;">Số lượng</th>
                <th class="text-end" style="width: 25%;">Đơn giá</th>
                <th class="text-end" style="width: 25%;">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (item.SanPham != null)
                                {
                                    <img src="@Url.Content((item.SanPham.HinhAnh ?? "no-image.png"))"
                                         alt="@item.SanPham.TenSanPham"
                                         class="rounded border shadow-sm me-3"
                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                    <span class="fw-bold text-dark">@item.SanPham.TenSanPham</span>
                                }
                                else
                                {
                                    <span class="text-danger fst-italic">Sản phẩm đã xóa</span>
                                }
                            </div>
                        </td>
                        <td class="text-center">
                            <strong class="badge bg-secondary rounded-pill px-3">@item.SoLuong</strong>
                        </td>
                        <td class="text-end">
                            @string.Format("{0:N0}", item.DonGia)
                        </td>
                        <td class="text-end text-primary fw-bold">
                            @string.Format("{0:N0}", item.SoLuong * item.DonGia)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">
                        <i class="fas fa-box-open fa-2x mb-2"></i><br />
                        Không có dữ liệu chi tiết.
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="table-light">
            <tr>
                <td colspan="3" class="text-end fw-bold align-middle">TỔNG CỘNG:</td>
                <td class="text-end text-danger fw-bold" style="font-size: 1.2rem;">
                    @string.Format("{0:N0} đ", ViewBag.TongTien)
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@{
    // Lấy thông tin hóa đơn từ item đầu tiên
    var hoadon = Model.FirstOrDefault()?.HoaDon;
}

@if (hoadon != null && hoadon.TinhTrang == "Đã hủy" && !string.IsNullOrEmpty(hoadon.GhiChuHuy))
{
    <div class="alert alert-danger mt-3 mb-0 shadow-sm d-flex align-items-center" role="alert">
        <div class="me-3">
            <i class="fas fa-exclamation-triangle fa-2x"></i>
        </div>
        <div>
            <h6 class="fw-bold mb-1">Đơn hàng đã bị hủy</h6>
            <span>Lý do: <strong>@hoadon.GhiChuHuy</strong></span>
        </div>
    </div>
}