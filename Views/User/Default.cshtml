@model IEnumerable<FastFood.Models.LoaiSanPham>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    /* CSS tùy chỉnh cho Offer Section trên nền BT5 */
    .offer_section .box {
        background-color: #222831; /* Màu nền tối sang trọng */
        color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        position: relative;
        overflow: hidden;
    }

        .offer_section .box:hover {
            transform: translateY(-5px);
            border-color: #ffbe33; /* Viền vàng khi hover */
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

    /* Định dạng ảnh */
    .offer_section .img-box {
        width: 150px;
        height: 150px;
        flex-shrink: 0; /* Không cho ảnh bị co lại */
        border-radius: 50%;
        border: 5px solid #ffbe33;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
    }

        .offer_section .img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

    .offer_section .box:hover .img-box img {
        transform: scale(1.1); /* Phóng to ảnh khi hover */
    }

    /* Định dạng nội dung bên phải */
    .offer_section .detail-box {
        margin-left: 20px;
        flex-grow: 1;
    }

    .offer_section h5 {
        font-family: 'Dancing Script', cursive; /* Font chữ kiểu nếu có */
        font-weight: bold;
        font-size: 1.8rem;
        margin-bottom: 5px;
    }

    .offer_section h6 {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: #dbdbdb;
    }

    /* Nút đặt hàng */
    .btn-order-now {
        display: inline-flex;
        align-items: center;
        background-color: transparent; /* Nền trong suốt */
        color: #ffbe33;
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .btn-order-now:hover {
            color: #fff;
        }

        .btn-order-now svg {
            width: 20px;
            height: 20px;
            margin-left: 10px;
            fill: #ffbe33;
            transition: 0.3s;
        }

        .btn-order-now:hover svg {
            fill: #fff;
            transform: translateX(5px); /* Di chuyển icon sang phải */
        }
</style>

<section class="offer_section layout_padding-bottom py-5">
    <div class="offer_container">
        <div class="container">
            <div class="row g-4">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-6">
                            <div class="box d-flex align-items-center shadow-sm">
                                <div class="img-box">
                                    <a href="@Url.Action("Index", "Menu", new { id = item.MaLoaiSP })">
                                        <img src="~/Images/Categories/@item.HinhAnh" alt="@item.TenLoaiSP"
                                             onerror="this.src='https://via.placeholder.com/150'">
                                    </a>
                                </div>
                                <div class="detail-box">
                                    <h5>@item.TenLoaiSP</h5>
                                    <h6>
                                        <span class="badge bg-warning text-dark rounded-pill me-1">-20%</span>
                                        Giảm giá hôm nay
                                    </h6>

